<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? yield(:title) : 'Shaan Indian' %></title>

  <meta charset="utf-8"/>
  <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>

  <%= favicon_link_tag %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- Wrapper -->
<div id="wrapper">
  <!-- Header -->
  <header>
    <!-- Container -->
    <div class="container">
      <!-- Row -->
      <div class="row head_top">
        <!-- Main Navigation -->
        <div class="col col-md-5 hidden-xs hidden-sm">
          <nav class="cl-effect-4">
            <!-- #navigation -->
            <div id="navigation">
              <%= render 'layouts/navigation' %>
            </div>
            <!-- #navigation ends -->
          </nav>
        </div>
        <!-- Main Navigation Ends -->
        <div class="col col-md-2 col-sm-12">
          <!-- Logo -->
          <div class="logo text-center">
            <p>
              <%= image_tag('knife') %>
              <br />Shaan Indian
            </p>
          </div>
          <!-- Logo ends -->
        </div>
        <!-- Top Social Media -->
        <div class="col-md-5 col-sm-12">
          <ul class="menu social text-right">
            <li>
              <a class="fa-icons" href="#">
                <i class="fa fa-facebook"></i>
              </a>
            </li>
            <li>
              <a class="fa-icons" href="#">
                <i class="fa fa-twitter"></i>
              </a>
            </li>
            <li>
              <a class="fa-icons" href="#">
                <i class="fa fa-instagram"></i>
              </a>
            </li>
            <li>
              <a class="fa-icons" href="#">
                <i class="fa fa-pinterest"></i>
              </a>
            </li>
          </ul>
        </div>
        <!-- Navigation between 1024px - 768px -->
        <div class="col col-md-5 hidden-lg hidden-md hidden-xs">
          <nav class="cl-effect-4">
            <!-- #navigation -->
            <div id="navigation_tab">
              <%= render 'layouts/navigation' %>
            </div>
            <!-- #navigation ends -->
          </nav>
        </div>

        <div class="clearfix"></div>
        <!-- Responsive Menu below 768px -->
        <div class="col col-md-12 hidden-lg hidden-md hidden-sm">
          <!-- Bootstrap Menu -->
          <nav class="navbar navbar-default">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a href="#" class="navbar-brand">Menu</a>
            </div>
            <!-- Collection of nav links and other content for toggling -->
            <div id="navbarCollapse" class="collapse navbar-collapse">
              <ul class="nav navbar-nav">
                <li class="active">
                  <a href="index.php">
                    <span data-hover="HOME">Home</span>
                  </a>
                </li>
                <li>
                  <a href="about.html">
                    <span data-hover="ABOUT">About</span>
                  </a>
                </li>
                <li>
                  <a href="menu.html">
                    <span data-hover="MENU">Menu</span>
                  </a>
                </li>
                <li>
                  <a href="gallery.html">
                    <span data-hover="GALLERY">Gallery</span>
                  </a>
                </li>
                <li>
                  <a href="reservation.html">
                    <span data-hover="RESERVATION">Reservation</span>
                  </a>
                </li>
                <li>
                  <a href="contact.html">
                    <span data-hover="CONTACT">Contact</span>
                  </a>
                </li>
              </ul>
            </div>
          </nav>
        </div>
      </div>
      <!-- Row Ends -->
    </div>
    <!-- Container Ends -->
  </header>
  <!-- Header ends -->
  <!-- Main -->

  <%= yield %>

  <!-- Main Ends -->
</div>
<!-- Wrapper Ends -->

<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

</body>
</html>
